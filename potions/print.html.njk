<style>
  @font-face {
    font-family: "nodesto-condensed";
    src: url("path_to_nodesto_condensed_font") format("opentype");
    font-weight: normal;
  }

  @font-face {
    font-family: "Scaly Sans";
    src: url("path_to_scaly_sans_font") format("opentype");
    font-weight: normal;
  }
  
  .CardFront {
    width: auto;
    border-radius: 8px;
    background-color: white; /* Background color set to white */
    border: 5px solid black; /* Added black border */
  }

  .CardContent {
    padding: 0.625rem;
    font-family: "Scaly Sans", serif;
    font-weight: 300;
  }

  .Title {
    padding: 0.125rem 0.5rem;
    background-color: #e8ebec;
    border-top-left-radius: 8px;
    border-top-right-radius: 8px;
    font-size: 2.00rem;
    font-family: "nodesto-condensed", serif;
    text-transform: uppercase;
    text-align: center;
  }

  .BlackBar {
    height: 3px;
    background-color: black;
  }

  .DetailsContainer {
    overflow: auto;
    border-bottom-left-radius: 8px;
    border-bottom-right-radius: 8px;
  }

  .DetailsBlock {
    padding: 0.1875rem 0.5rem 0.6875rem;
    background-color: #e8ebec;
    font-size: 1.8rem;
  }
</style>

<div class='CardFront'>
  <div class='CardContent'>
    <!-- Replaceable image -->
    <img src="{{ it.imageUrl }}" alt="Card Image" style="width: 50%; border-top-left-radius: 8px; border-top-right-radius: 8px; display: block; margin: auto;">
    
    <div class="Title">{{ it.name }}</div>
    <div class="BlackBar"></div>
    <div class="DetailsContainer">
      <div class="DetailsBlock"><b>Effects:</b> {{ it.effect}}</div>
      <div class="DetailsBlock"><b>Appearance</b>{{ it.appearance}}</div>
      <div class="DetailsBlock"><b>Taste & Smell</b> {{ it.taste}}</div>
      <div class="DetailsBlock"><b>Sensory:</b> {{ it.sensory}}</div>
      <div class="DetailsBlock"><b>Container:</b> {{ it.container}}</div>
      <div class="DetailsBlock"><b>Value:</b>{{ it.value}}</div>
    </div>
  </div>
</div>
